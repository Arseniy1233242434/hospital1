<Page x:Class="WpfApp3.Pages.CreatePatient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePatient">

    <Grid x:Name="AddPatient">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>

        </Grid.RowDefinitions>
        <Label Content="Фамилия" Grid.Row="0"></Label>
        <TextBox Grid.Row="0" Margin="60,0,0,0" Height="25" Width="220" Text="{Binding Path=LastName, Mode=TwoWay}"></TextBox>

        <Label Content="Имя" Grid.Row="1"></Label>
        <TextBox Grid.Row="1" Margin="60,0,0,0" Height="25" Width="220" Text="{Binding Path=Name, Mode=TwoWay}"></TextBox>

        <Label Content="Отчество" Grid.Row="2"></Label>
        <TextBox Grid.Row="2" Margin="60,0,0,0" Height="25" Width="220" Text="{Binding Path=MiddleName, Mode=TwoWay}"></TextBox>

        <Label Content="Дата рождения" Grid.Row="3"></Label>
        <DatePicker Grid.Row="3" Margin="100,0,0,0" Height="25" Width="180" Text="{Binding Path=Birthday, Mode=TwoWay}"></DatePicker>

        <Label Content="Контактный телефон" Grid.Row="4"></Label>
        <TextBox Grid.Row="4" Margin="60,0,0,0" Height="25" Width="220" Text="{Binding Path=PhoneNumber, Mode=TwoWay}"></TextBox>


        <Button Content="Сохранить" Grid.Row="5" Click="AddPatient_Click"></Button>
        <Button Content="Назад" Grid.Row="6" Click="Button_Click"></Button>
    </Grid>
</Page>
