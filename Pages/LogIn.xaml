<Page x:Class="WpfApp3.Pages.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogIn">

    <DockPanel>
        <Grid x:Name="Authorisationn">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Идентификатор" Margin="200,100,0,0" Grid.Row="0"></Label>
            <TextBox Grid.Row="0" Margin="100,90,0,0" Height="25" Width="180" Text="{Binding Path=ID, Mode=OneWayToSource}"></TextBox>

            <Label Content="Пароль" Grid.Row="1" Margin="200,55,0,0"></Label>
            <TextBox Grid.Row="1" Margin="100,0,0,0" Height="25" Width="180" Text="{Binding Path=Password, Mode=OneWayToSource}"></TextBox>
            <Button Content="Войти" Grid.Row="2"  Width="220" Height="30" Margin="0,0,160,0" Click="Authorisation_Click"></Button>
            <Button Content="Регистрация" Grid.Row="3"  Width="220" Height="30" Margin="0,0,160,40" Click="Registration_Click"></Button>
        </Grid>

    </DockPanel>
</Page>
